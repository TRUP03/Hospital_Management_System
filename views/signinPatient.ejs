<%- include('partials/head')%>


   <%- include('partials/navbar')%>
<div class="sign">
    <h2>FastAppoint<i class="fa-solid fa-laptop-medical"></i></h2>
    <form class="row g-3" action="/signinPatient" method="post">
        <div class="col-md-4">
          <label for="validationDefault01" class="form-label">Full name</label>
          <input type="text" class="form-control" id="validationDefault01" value="Mark" name="name" required>
        </div>
        <div class="col-md-4">
          <label for="validationDefaultUsername" class="form-label">Email</label>
          <div class="input-group">
            <span class="input-group-text" id="inputGroupPrepend2">@</span>
            <input type="email" class="form-control" id="validationDefaultUsername" name="username" aria-describedby="inputGroupPrepend2" required>
          </div>
        </div>
        <div class="col-md-6">
          <label for="validationDefault03" class="form-label">City</label>
          <input type="text" class="form-control" id="validationDefault03" name="location" required>
        </div>
        <div class="col-md-3">
          <label for="validationDefault04" class="form-label">State</label>
          <select class="form-select" id="validationDefault04" name="state" required>
            <option selected disabled value="">Choose...</option>
            <option>...</option>
          </select>
        </div>
        <div class="col-md-3">
          <label for="validationDefault05" class="form-label">Zip</label>
          <input type="text" class="form-control" id="validationDefault05" name="zip" required>
        </div>
        <section>
          <label for="password">password</label>
          <input type="password"class="form-control" name="password" id="password">
      </section>
        <div class="col-12">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="invalidCheck2" required>
            <label class="form-check-label" for="invalidCheck2">
              Agree to terms and conditions
            </label>
          </div>
        </div>
        <div class="col-12">
          <button class="btn btn-primary" type="submit">Register</button>
        </div>
      </form>
</div>
   
